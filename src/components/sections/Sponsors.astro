---
import Heading from "./Heading.astro"
---

<!-- Sponsors Section -->
<section id="sponsors" class="py-16 lg:py-24 bg-accent text-background col-span-5">
  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="text-center">
      <Heading level={2} size="3xl" class="sm:text-4xl"> Sponsors </Heading>
      <p class="mt-4 text-lg text-background font-mono">Industry Partners</p>
    </div>

    <!-- BTC Sponsors -->
    <div class="mt-16">
      <Heading level={3} size="2xl" class="text-center mb-8"> BTC </Heading>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center justify-items-center">
        <div class="flex items-center justify-center p-8 h-32 w-80">
          <img src="/logos/naantali.svg" alt="Sponsor" class="max-h-full max-w-full object-contain" />
        </div>
        <div class="flex items-center justify-center p-8 h-32 w-80">
          <img src="/logos/naantali.svg" alt="Sponsor" class="max-h-full max-w-full object-contain" />
        </div>
      </div>
    </div>

    <!-- ETH Sponsors -->
    <div class="mt-16">
      <Heading level={3} size="xl" class="text-center mb-8"> ETH </Heading>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 items-center justify-items-center">
        <div class="flex items-center justify-center p-6 h-24 w-48">
          <img src="/logos/naantali.svg" alt="Sponsor" class="max-h-full max-w-full object-contain" />
        </div>
        <div class="flex items-center justify-center p-6 h-24 w-48">
          <img src="/logos/naantali.svg" alt="Sponsor" class="max-h-full max-w-full object-contain" />
        </div>
        <div class="flex items-center justify-center p-6 h-24 w-48">
          <img src="/logos/naantali.svg" alt="Sponsor" class="max-h-full max-w-full object-contain" />
        </div>
        <div class="flex items-center justify-center p-6 h-24 w-48">
          <img src="/logos/naantali.svg" alt="Sponsor" class="max-h-full max-w-full object-contain" />
        </div>
      </div>
    </div>
  </div>
</section>
