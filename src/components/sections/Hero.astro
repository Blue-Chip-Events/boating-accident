---
import TicketCTA from "../primitives/TicketCTA.astro"
import Heading from "./Heading.astro"
import { Calendar, Pin, type Icon as IconType } from "@lucide/astro"
---

<style>
  @keyframes date-entrance {
    0% {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes pulse-slow {
    0%,
    90%,
    100% {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
    45% {
      opacity: 0.92;
      transform: translateX(4px) scale(1.02);
    }
  }

  .animate-date {
    animation: date-entrance 1.5s ease-out forwards;
  }

  .animate-date.pulsing {
    animation: pulse-slow 4s ease-in-out infinite;
  }
</style>

<script>
  window.addEventListener("astro:page-load", () => {
    const dateElement = document.querySelector(".animate-date")
    if (dateElement) {
      // Wait for the entrance animation to complete, then start pulsing slowly
      setTimeout(() => {
        dateElement.classList.add("pulsing")
      }, 1500) // Match the entrance animation duration
    }
  })
</script>

<!-- Hero Section -->
<section
  class="relative text-white border-b border-gray-700 col-span-5 overflow-hidden -mt-20 pt-20"
>
  <!-- Background Video -->
  <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover">
    <source src="/herovid.mp4" type="video/mp4" />
  </video>

  <!-- Overlay Curtain -->
  <div class="absolute top-0 left-0 w-full h-full bg-background opacity-75"></div>

  <!-- Content -->
  <div
    class="relative flex flex-col items-start justify-center mx-auto max-w-6xl px-6 py-32 lg:px-8 lg:h-200 max-h-[80vh]"
  >
    <div class="grid grid-cols-1 text-left max-h-fit">
      <Heading level={1} size="3xl" class="sm:text-4xl lg:text-5xl">
        Don't Lose Your Keys!
      </Heading>
      <div class="flex flex-col gap-2 py-4 text-xl sm:text-md text-gray-400">
        <span class="flex gap-2 items-center flex-wrap md:flex-nowrap">
          <strong class="text-hackathon">Hackathon</strong>
          <div class="flex items-center flex-wrap md:flex-nowrap md:w-auto w-full">
            <div class="flex items-center gap-1 shrink-0 min-w-max md:w-auto w-full">
              <Calendar />18.–19.5.2026,
            </div>
            <div class="flex items-center gap-1 shrink-0 min-w-max"><Pin />Turku, Finland</div>
          </div>
        </span>

        <span class="flex gap-2 items-center flex-wrap md:flex-nowrap">
          <strong class="text-conference">Conference</strong>
          <div class="flex items-center flex-wrap md:flex-nowrap md:w-auto w-full">
            <div class="flex items-center gap-1 shrink-0 min-w-max md:w-auto w-full">
              <Calendar />20.–21.5.2026,
            </div>
            <div
              class="flex items-center gap-1 shrink md:shrink-0 min-w-max md:w-auto w-full text-wrap whitespace-normal"
            >
              <Pin />Turku – Naantali – Kapellskär – Naantali
            </div>
          </div>
        </span>
      </div>
      <p class="mt-6 max-w-2xl text-md leading-8 text-gray-300 sm:text-xl">
        Welcome to the first annual Boating Accident! Ticket sales open now with <b
          >early bird pricing!</b
        >
      </p>
      <div class="mt-10 flex flex-col sm:flex-row items-start gap-4">
        <TicketCTA />
      </div>
    </div>
  </div>
</section>
