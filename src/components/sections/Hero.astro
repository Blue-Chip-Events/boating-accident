---
import Heading from "./Heading.astro"
---

<!-- Hero Section -->
<section
  class="relative text-white border-b border-gray-700 col-span-5 overflow-hidden -mt-20 pt-20"
>
  <!-- Background Video -->
  <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover">
    <source src="/herovid.mp4" type="video/mp4" />
  </video>

  <!-- Overlay Curtain -->
  <div class="absolute top-0 left-0 w-full h-full bg-background opacity-85"></div>

  <!-- Content -->
  <div class="relative mx-auto max-w-6xl px-6 py-32 lg:px-8 lg:py-64">
    <div class="grid grid-cols-1 text-left">
      <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
        Boating Accident
        <span class="block text-gray-400">2026</span>
      </Heading>
      <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-300 sm:text-xl font-mono">
        Exclusive Crypto Conference Blockchain Innovation Summit
      </p>
      <div class="mt-10 flex flex-col sm:flex-row items-start gap-4">
        <a
          href="#"
          class="bg-white text-black px-8 py-3 text-sm font-bold font-mono uppercase hover:bg-gray-200 transition-colors border border-white"
        >
          Buy Tickets
        </a>
        <a
          href="/program"
          class="border border-white px-8 py-3 text-sm font-bold font-mono uppercase text-white hover:bg-white hover:text-black transition-colors"
        >
          Program
        </a>
      </div>
    </div>
  </div>
</section>
