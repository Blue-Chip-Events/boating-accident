---
import Heading from "./Heading.astro"
---

<style>
  @keyframes date-entrance {
    0% {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes pulse-slow {
    0%, 90%, 100% {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
    45% {
      opacity: 0.92;
      transform: translateX(4px) scale(1.02);
    }
  }

  .animate-date {
    animation: date-entrance 1.5s ease-out forwards;
  }

  .animate-date.pulsing {
    animation: pulse-slow 4s ease-in-out infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dateElement = document.querySelector('.animate-date');
    if (dateElement) {
      // Wait for the entrance animation to complete, then start pulsing slowly
      setTimeout(() => {
        dateElement.classList.add('pulsing');
      }, 1500); // Match the entrance animation duration
    }
  });
</script>

<!-- Hero Section -->
<section
  class="relative text-white border-b border-gray-700 col-span-5 overflow-hidden -mt-20 pt-20"
>
  <!-- Background Video -->
  <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover">
    <source src="/herovid.mp4" type="video/mp4" />
  </video>

  <!-- Overlay Curtain -->
  <div class="absolute top-0 left-0 w-full h-full bg-background opacity-85"></div>

  <!-- Content -->
  <div class="relative mx-auto max-w-6xl px-6 py-32 lg:px-8 lg:py-64">
    <div class="grid grid-cols-1 text-left max-h-fit">
      <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
        Boating Accident
        <span class="block text-gray-400 animate-date">20.-21.5.2026</span>
      </Heading>
      <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-300 sm:text-xl font-mono">
        A Totally Unique Crypto Conference
      </p>
      <div class="mt-10 flex flex-col sm:flex-row items-start gap-4">
        <a
          href="https://luma.com/ibeqegrr"
          class="bg-white text-black px-8 py-3 text-sm font-bold font-mono uppercase hover:bg-gray-200 transition-colors border border-white"
          target="_blank"
          rel="noopener noreferrer"
        >
          Buy Tickets
        </a>
      </div>
    </div>
  </div>
</section>
