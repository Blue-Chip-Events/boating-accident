---
import Heading from "./Heading.astro"
---

<!-- Header -->
<section class="bg-background-alt text-white py-16 border-b border-gray-700 col-span-5">
  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="text-left">
      <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl"> Signal the Harbor </Heading>
      <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-400 font-mono">
        Send us a message in a bottle or use modern ship-to-shore communication
      </p>
    </div>
  </div>
</section>
