---
import Section from "../primitives/Section.astro"
import SpeakerCard from "../primitives/SpeakerCard.astro"
import { speakers } from "../../data/speakers"

// Filter for featured speakers only
const featuredSpeakers = speakers.filter(speaker => speaker.featured)
---

<Section title="Speakers" color="background">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-8 gap-y-12 items-start">
    {featuredSpeakers.map((speaker) => (
      <SpeakerCard
        name={speaker.name}
        title={speaker.title}
        company={speaker.company}
        imageUrl={speaker.imageUrl}
      />
    ))}
  </div>

  <!-- Link to full speakers page -->
  <div class="mt-12 text-center">
    <a
      href="/speakers"
      class="inline-flex items-center text-foreground hover:underline text-lg"
    >
      View All Speakers &rarr;
    </a>
  </div>
</Section>
