---
import "../styles/global.css"
import OpenGraph from "./primitives/OpenGraph.astro"
import Footer from "./sections/Footer.astro"
import Navigation from "./sections/Navigation.astro"

export interface Props {
  title: string
  currentPage?: string
}

const { title, currentPage } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="view-transition" content="same-origin" />

    <OpenGraph title={title} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Handjet:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-background text-white">
    <Navigation currentPage={currentPage} />

    <div class="min-h-screen grid grid-cols-5">
      <slot />
    </div>

    <Footer />
  </body><!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-G784FVWBYW"></script>
  <script>
    window.dataLayer = window.dataLayer || []
    function gtag() {
      dataLayer.push(arguments)
    }
    gtag("js", new Date())

    gtag("config", "G-G784FVWBYW")
  </script>
</html>
