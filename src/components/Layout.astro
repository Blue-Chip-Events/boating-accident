---
import "../styles/global.css"
import GoogleAnalytics from "./primitives/GoogleAnalytics.astro"
import Head from "./primitives/Head.astro"
import Footer from "./sections/Footer.astro"
import Navigation from "./sections/Navigation.astro"

export interface Props {
  title: string
  currentPage?: string
}

const { title, currentPage } = Astro.props
---

<html lang="en">
  <Head title={title} />

  <body class="bg-background text-white">
    <Navigation currentPage={currentPage} />

    <div class="grid grid-cols-5 max-h-fit">
      <slot />
    </div>

    <Footer />
    
    <GoogleAnalytics />
  </body>
</html>
