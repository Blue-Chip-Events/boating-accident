---
interface Props {
  name: string
  title: string
  company?: string
  imageUrl: string
}

const { name, title, company, imageUrl } = Astro.props
---

<div class="flex flex-col items-center text-center space-y-3">
  <div class="w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden bg-background-alt">
    <img
      src={imageUrl}
      alt={name}
      class="w-full h-full object-cover"
    />
  </div>
  <div>
    <h3 class="font-semibold text-lg">{name}</h3>
    <p class="text-sm text-gray-400">
      {title}{company && ` â€¢ ${company}`}
    </p>
  </div>
</div>
