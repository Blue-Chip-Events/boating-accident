---
import Layout from "../components/Layout.astro"
import Section from "../components/primitives/Section.astro"
import SpeakerCard from "../components/primitives/SpeakerCard.astro"
import Heading from "../components/sections/Heading.astro"
import { speakers } from "../data/speakers"
---

<Layout title="Speakers - Boating Accident" currentPage="speakers">
  <!-- Page Header -->
  <section class="bg-background-alt text-white py-16 border-b border-gray-700 col-span-5 max-h-fit">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
        Speakers
      </Heading>
      <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-400 font-mono">
        Meet the experts and innovators speaking at Boating Accident 2025.
      </p>
    </div>
  </section>

  <!-- All Speakers Grid -->
  <Section title="All Speakers" color="background">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-8 gap-y-12 items-start">
      {speakers.map((speaker) => (
        <SpeakerCard
          name={speaker.name}
          title={speaker.title}
          company={speaker.company}
          imageUrl={speaker.imageUrl}
        />
      ))}
    </div>
  </Section>
</Layout>
