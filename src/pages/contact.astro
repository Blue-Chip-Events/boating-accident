---
import Layout from '../components/Layout.astro';
import Heading from '../components/sections/Heading.astro';
---

<Layout title="Signal the Harbor - Boating Accident" currentPage="contact">
  <!-- Header -->
  <section class="bg-[#061126] text-white py-16 border-b border-gray-700 col-span-5">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="text-left">
        <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
          Signal the Harbor
        </Heading>
        <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-400 font-mono">
          Send us a message in a bottle or use modern ship-to-shore communication
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-16 lg:py-24 col-span-5">
    <div class="mx-auto max-w-4xl px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <Heading level={2} size="2xl" class="mb-6">Send a Message</Heading>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-2 font-mono">
                Captain's Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-3 border border-gray-600 bg-[#061126] text-white font-mono focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent"
                placeholder="Your Seafaring Name"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-white mb-2 font-mono">
                Ship's Telegraph (Email)
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 border border-gray-600 bg-[#061126] text-white font-mono focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent"
                placeholder="your.ship@maritime.crypto"
              />
            </div>

            <div>
              <label for="vessel" class="block text-sm font-medium text-white mb-2 font-mono">
                Vessel Type
              </label>
              <select
                id="vessel"
                name="vessel"
                class="w-full px-4 py-3 border border-gray-600 bg-[#061126] text-white font-mono focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent"
              >
                <option value="">Choose Your Vessel...</option>
                <option value="crypto-trader">Crypto Trading Ship</option>
                <option value="defi-explorer">DeFi Explorer Yacht</option>
                <option value="nft-galleon">NFT Treasure Galleon</option>
                <option value="blockchain-frigate">Blockchain Development Frigate</option>
                <option value="sponsor-vessel">Sponsor Flagship</option>
                <option value="other">Other Maritime Vessel</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-white mb-2 font-mono">
                Message in a Bottle
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                class="w-full px-4 py-3 border border-gray-600 bg-[#061126] text-white font-mono focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent"
                placeholder="Tell us about your crypto voyage, sponsorship inquiry, speaking proposal, or any other maritime matters..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-[#061126] text-white px-6 py-3 border border-gray-600 font-semibold hover:bg-gray-900 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 font-mono"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <div>
            <Heading level={2} size="2xl" class="mb-6">Harbor Information</Heading>
            <div class="space-y-6">
              <div class="bg-[#061126] p-6 border border-gray-600">
                <div class="flex items-start space-x-4">
                  <div class="text-2xl text-white">L</div>
                  <div>
                    <Heading level={3} size="base">Port Location</Heading>
                    <p class="text-gray-400 font-mono">Finland Waters<br/>Nordic Crypto Harbor</p>
                  </div>
                </div>
              </div>

              <div class="bg-[#061126] p-6 border border-gray-600">
                <div class="flex items-start space-x-4">
                  <div class="text-2xl text-white">R</div>
                  <div>
                    <Heading level={3} size="base">Ship-to-Shore Radio</Heading>
                    <p class="text-gray-400 font-mono">contact@boatingaccident.fi<br/>(Maritime Frequency Only)</p>
                  </div>
                </div>
              </div>

              <div class="bg-[#061126] p-6 border border-gray-600">
                <div class="flex items-start space-x-4">
                  <div class="text-2xl text-white">H</div>
                  <div>
                    <Heading level={3} size="base">Harbor Hours</Heading>
                    <p class="text-gray-400 font-mono">24/7 Emergency Contact<br/>Standard: GMT+2 (9AM-6PM)</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Contact Options -->
          <div class="bg-[#061126] p-6 border border-gray-600">
            <Heading level={3} size="lg" class="mb-4">Quick Signals</Heading>
            <div class="space-y-3">
              <div class="flex items-center space-x-3">
                <span class="text-lg text-white">S</span>
                <span class="text-gray-400 font-mono">Speaking Proposals: speakers@boatingaccident.fi</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-lg text-white">$</span>
                <span class="text-gray-400 font-mono">Sponsorship Inquiries: sponsors@boatingaccident.fi</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-lg text-white">P</span>
                <span class="text-gray-400 font-mono">Press & Media: press@boatingaccident.fi</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-lg text-white">T</span>
                <span class="text-gray-400 font-mono">Ticket Support: tickets@boatingaccident.fi</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>