---
import Layout from '../components/Layout.astro';
import Heading from '../components/sections/Heading.astro';
---

<Layout title="Program - Boating Accident" currentPage="program">
  <!-- Header -->
  <section class="bg-[#061126] text-white py-16 border-b border-gray-700 col-span-5">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="text-left">
        <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
          Program
        </Heading>
        <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-400 font-mono">
          Conference Schedule
        </p>
      </div>
    </div>
  </section>

  <!-- Program Content -->
  <section class="py-16 lg:py-24 col-span-5">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="space-y-12">
        <!-- Day 1 -->
        <div>
          <Heading level={2} size="3xl" class="mb-8">Day 1</Heading>
          <div class="space-y-6">
            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <Heading level={3} size="xl">Opening Ceremony</Heading>
                  <p class="text-gray-400 mt-2 font-mono">Welcome and Conference Overview</p>
                </div>
                <span class="text-white font-semibold font-mono">09:00 - 10:00</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <Heading level={3} size="xl">Blockchain Fundamentals</Heading>
                  <p class="text-gray-400 mt-2 font-mono">Keynote Presentation</p>
                </div>
                <span class="text-teal-600 font-semibold">10:30 - 11:30</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <Heading level={3} size="xl">DeFi Workshop</Heading>
                  <p class="text-gray-400 mt-2 font-mono">Hands-on Session</p>
                </div>
                <span class="text-teal-600 font-semibold">14:00 - 16:00</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Day 2 -->
        <div>
          <Heading level={2} size="3xl" class="mb-8">Day 2</Heading>
          <div class="space-y-6">
            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <Heading level={3} size="xl">NFT Panel</Heading>
                  <p class="text-gray-400 mt-2 font-mono">Digital Collectibles Discussion</p>
                </div>
                <span class="text-teal-600 font-semibold">09:00 - 10:30</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <Heading level={3} size="xl">Trading Strategies</Heading>
                  <p class="text-gray-400 mt-2 font-mono">Advanced Techniques</p>
                </div>
                <span class="text-teal-600 font-semibold">11:00 - 12:30</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <Heading level={3} size="xl">Closing Ceremony</Heading>
                  <p class="text-gray-400 mt-2 font-mono">Networking Reception</p>
                </div>
                <span class="text-teal-600 font-semibold">16:00 - 18:00</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>